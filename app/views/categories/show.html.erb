<h1>Showing categories</h1>

<%= @category.name %>


<div class="container">
  <div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-4">
      <div class="thumbnail">
        <%= image_tag(product.photo_url, class: "img-responsive") %>
                <div class="caption">
                    <h4 class="pull-right"> <%= product.price %></h4>
                    <h4><a href="#"><%= product.name %></a>
                    </h4>
                    <p>See more about this product.</p>
                </div>
                <div class="ratings">
                    <p class="pull-right"><%= product.reviews.count %> Reviews</p>
                    <p>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    </p>
                </div>
            </div>
        </div>
  <% end %>
