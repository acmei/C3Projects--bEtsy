<div class="form-group">
    <%= form_for @product, html: {class: "form"} do |f| %>
  <div class="col-md-4 col-md-offset-2">
    <%= render partial: "shared/error_messages", locals: { data_type: @product } %>
      <h3>Describe your product</h3>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <br>
      <%= f.label :description %>
      <%= f.text_area :desc, class: "form-control" %>
      <br>
      <%= f.label :categories %><br>
      <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) do |b| %>
        <%= b.label class: "checkbox-inline" do %>
          <%= b.check_box + b.text.capitalize %>
        <% end %>
      <% end %>
      <br><br>
      <%= f.label :photo_url %><br>
      <%= f.collection_select :photo_url, Product.all, :photo_url, :photo_url, include_blank: "--Select a Photo--" %>

    </div>


  <div class="col-md-4">
    <h3>Add product details</h3>

    <div class="form-group">
      <%= f.label :weight, "Weight (lbs)" %>
      <%= f.number_field :weight, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :width, "Width (inches)" %>
      <%= f.number_field :width, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :height, "Width (inches)" %>
      <%= f.number_field :height, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :length, "Width (inches)" %>
      <%= f.number_field :length, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :stock %>
      <%= f.number_field :stock, class: "form-control" %>
    </div>

    <br>
    <% if form_type %>
      <div class="form-group">
        <%= f.label :retired %>
        <%= f.check_box :retired %>
      </div>
    <% end %>

    <%= f.hidden_field :user_id, value: @product.user_id %>
    <%= f.submit class: "btn btn-default" %>
  <% end %>
  </div>
 </div>
</div>
