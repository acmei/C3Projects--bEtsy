<%= form_for @product, html: {class: "form"}, url: products_path do |f| %>
<h2><center>New Product</h2>
<div class="jumbotron">
  <div class = "form-group">
    <div class="row">
      <div class="col-md-4">
        <h3>Describe your product and set the price</h3>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.label :price %>
        <%= f.text_field :price, class: "form-control" %>

        <%= f.label :description %>
        <%= f.text_field :desc, class: "form-control" %>
      </div>

      <div class="col-md-4">
        <h3>Add quantity and submit a photo</h3>
        <%= f.label :stock %>
        <%= f.text_field :stock, class: "form-control" %>

        <%= f.label :photo_url %>
        <%= f.text_field :photo_url, class: "form-control" %>
      </div>

      <div class="col-md-4">
        <h3>Choose seller and category</h3>

        <%= f.label :user_id %>
        <%= f.text_field :user_id, class: "form-control"%>
      </div>
    </div>
  </div>
</div>
    <%= f.submit "Save", class: "btn btn-default" %>
<% end %>
