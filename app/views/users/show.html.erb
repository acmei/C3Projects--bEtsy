<div class="row no-jumbo form-header">
  <div class = "col-md-6">
    <h1> <%= "Hello, #{@user.name.capitalize}" %> </h1>
    </div>
  </div>
<div class="row">
  <div class = "col-md-6">
<p><%= link_to "Add a Product", new_product_path, class: "btn btn-default" %></p>

    <table class="table table-hover">
  <tr>
    <th>Product Name</th>
    <th>Edit Product</th>
    <th>Retire Product</th>
  </tr>

  <% @products.each do |product| %>
  <tr>
    <td> <%= link_to "#{product.name}", product_path(product) %></td>
    <td> <%= link_to "Edit", edit_product_path(product), class: "btn btn-default" %> </td>
    <td> <%= button_to "Retire", retire_path(product), method: "patch", class: "btn btn-primary" %> </td>
  </tr>
  <% end %>
</table>
  </div>
</div>
